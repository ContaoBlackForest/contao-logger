{
	"name":"bit3/contao-logger",
	"description":"PSR-3 logger bridge for Contao Open Source CMS",
	"keywords":["contao", "logger", "psr-3"],
	"type":"contao-module",
	"license":"LGPL-3.0+",
	"authors":[
		{
			"name":"Tristan Lins",
			"email":"tristan.lins@bit3.de",
			"homepage":"http://bit3.de",
			"role":"Developer"
		}
	],
	"support":{
		"email":"info@bit3.de",
		"issues":"https://github.com/bit3/contao-logger/issues",
		"irc":"irc://irc.freenode.org/contao.dev",
		"source":"https://github.com/bit3/contao-logger"
	},
	"require":{
		"php":">=5.3",
		"contao/core": ">=2.11.11,<3.2",
		"contao-community-alliance/composer-installer": "*",
		"bit3/contao-dependency-container": "~1",
		"psr/log": "~1",
		"monolog/monolog": "~1.5"
	},
	"require-dev":{
		"phpunit/phpunit":"3.7.*",
		"squizlabs/php_codesniffer":"1.*",
		"bit3/php-coding-standard":"@dev"
	},
	"autoload":{
		"psr-0":{
			"Logger": "src/"
		}
	},
	"extra": {
		"contao": {
			"sources": {
				"contao": "system/modules/logger"
			}
		},
		"branch-alias": {
			"dev-master": "1.x-dev"
		}
	}
}
